# 环境变量配置示例
# 复制此文件为 .env 并填入实际值

PORT=3001
NODE_ENV=development

# OpenAI API配置 - 必须填入你的实际API密钥
OPENAI_API_KEY=your_openai_api_key_here

# 文件上传配置
MAX_FILE_SIZE=52428800
UPLOAD_DIR=uploads
OUTPUT_DIR=output

# 跨域配置
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# 日志级别 (error, warn, info, debug)
LOG_LEVEL=info
